.page-bg {
  background-color: rgb(28, 196, 28);
  height: 300rpx;
  position: absolute;
  width: 100%;
  top: 0;
  border-radius: 0 0 80rpx 80rpx/0 0 10rpx 10rpx;
}

.inputPage {
  width: auto;
  height: 400rpx;
  background-color:  white;
  margin: 30rpx;
  margin-top: 200rpx;
  margin-bottom: 60rpx;
  border-radius: 15rpx;
  border: 2rpx solid #f0f0f0;
  position: relative;
  z-index: 100;
}

.inputPage .menu {
  padding: 15rpx;
}

.inputPage .van-field__body--textarea {
  padding-left: 15rpx;
}

.outputPage {
  width: auto;
  height: 300rpx;
  margin: 30rpx;
  margin-top: 60rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 15rpx;
  border: 3rpx solid #f0f0f0;

}

.outputPage .result {
  width: auto;
  height: 400rpx;
  word-break: break-all;
  font-size: 14px;
}

van-button {
  display: flex;
  flex: 1;
}